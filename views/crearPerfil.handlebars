<main>
	
	<form method="post" action="/nuevo_Perfil">
		<div class="row uniform">

				<div class="6u$ 12u$(xsmall)">
					<label for="nombre">Nombre</label>
					<input type="text" name="nombre" id="nombre" value="" placeholder="Ingresa tu nombre" />
				</div>
				<div class="6u$ 12u$(xsmall)">
					<label for="Apellido">Apellido</label>
					<input type="text" name="Apellido" id="Apellido" value="" placeholder="Ingresa tu Apellido" />
				</div>
				<div class="6u$ 12u$(xsmall)">
					<label for="sueldo">Sueldo mensual</label>
					<input type="number" min="1" pattern="^[0-9]+" name="sueldo" id="sueldo" value="" placeholder="Ingresa tu sueldo" />
				</div>

				<div class="6u$ 12u$(xsmall)">
					<label for="email">Correo eletrónico</label>
					<input type="email" name="email" id="email" value="" placeholder="tucorreo@escribe.com" />
				</div>
				<div class="6u$ 12u$(xsmall)">
					<label for="password">Contraseña</label>
					<input type="password" name="password" id="password" value="" placeholder="Ingresa una contraseña" />
				</div>
				<div class="6u$ 12u$(xsmall)">
					<label for="confirmPassword"> Confirmar Contraseña</label>
					<input type="password" name="confirmPassword" id="confirmPassword" value="" placeholder="Repite tu contraseña" />
				</div>
				<div class="12u$">
					<input type="submit" value="Guardar" />
				</div>
		</div>
	</form>
</main>