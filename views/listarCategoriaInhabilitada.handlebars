<main>
    <div class="app-main__outer">
        <div class="app-main__inner">
            <div class="app-page-title">
                <div class="page-title-wrapper">
                    <div class="page-title-heading">
                        <div class="page-title-icon">
                            <i class="pe-7s-car icon-gradient bg-mean-fruit">
                            </i>
                        </div>
                        <div> Tienes el poder de tus finanzas al alcance
                            <div class="page-title-subheading"> El control en tus manos...
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-xl-4">
                    <div class="card mb-3 widget-content bg-midnight-bloom">
                        <div class="widget-content-wrapper text-white">
                            <div class="widget-content-left">
                                <div class="widget-heading">Tu sueldo es de:</div>
                            </div>
                            <div class="widget-content-right">
                                <div class="widget-numbers text-white"><span>{{elUsuario.sueldo}}</span></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-4">
                    <div class="card mb-3 widget-content bg-arielle-smile">
                        <div class="widget-content-wrapper text-white">
                            <div class="widget-content-left">
                                <div class="widget-heading">Tu gasto es de:</div>

                            </div>
                            <div class="widget-content-right">
                                <div class="widget-numbers text-white"><span>L. {{gasto}}</span></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-4">
                    <div class="card mb-3 widget-content bg-grow-early">
                        <div class="widget-content-wrapper text-white">
                            <div class="widget-content-left">
                                <div class="widget-heading">% de {{finanza}}</div>
                            </div>
                            <div class="widget-content-right">
                                <div class="widget-numbers text-white"><span>{{porcentaje}} %</span></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="main-card mb-3 card">
                            <div class="card-header">Listado de tus categorias inhabilitadas

                            </div>
                            <div class="table-responsive">
                                <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center"> </th>
                                            <th>Nombre</th>
                                            <th class="text-center">Descripción</th>
                                            <th class="text-center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#if lasCategorias.length}}

                                        {{#each lasCategorias}}
                                        <tr>
                                            <td class="text-center text-muted"> ° </td>
                                            <td>
                                                <div class="widget-content p-0">
                                                    <div class="widget-content-wrapper">

                                                    </div>
                                                    <div class="widget-content-left flex2">
                                                    </div>
                                                </div>
                            </div>
                            <div class="widget-heading"><strong>{{nombre}}</strong></div>
                            </td>
                            <td class="text-center">{{descripcion}}</td>
                            <td class="text-center">
                                <a href="#" class="btn btn-primary btn-sm" data-habilitar="{{url}}">habilitar</a>

                            </td>
                            </tr>
                            {{/each}}
                            {{else}}
                            <div class="card-header">aun no tines categorias inhabilitadas </div>
                            {{/if}}

                            </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>


            <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
        </div>
    </div>
    </div>
</main>